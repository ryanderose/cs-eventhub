{
  "name": "@events-hub/api",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "tsx watch adapters/local/server.ts",
    "build": "echo 'api build handled by Vercel deploy'",
    "start": "NODE_ENV=production tsx adapters/local/server.ts",
    "dev:vercel": "vercel dev --cwd .",
    "vercel:build": "vercel build --cwd .",
    "test": "node ../../scripts/run-vitest.mjs",
    "test:contract:local": "vitest run --config vitest.contract.ts --reporter=dot",
    "test:contract:preview": "PREVIEW_URL=$PREVIEW_URL vitest run --config vitest.contract.ts --reporter=dot",
    "seed:default-plan": "tsx scripts/seed-default-plan.ts"
  },
  "dependencies": {
    "@events-hub/ai-composer": "workspace:*",
    "@events-hub/ai-interpreter": "workspace:*",
    "@events-hub/page-schema": "workspace:*",
    "@events-hub/router-helpers": "workspace:*",
    "@events-hub/security": "workspace:*",
    "@events-hub/telemetry": "workspace:*",
    "@opentelemetry/api": "1.7.0",
    "@vercel/kv": "1.0.1",
    "express": "4.19.2"
  },
  "devDependencies": {
    "@vercel/node": "3.2.9",
    "@types/express": "4.17.21",
    "vercel": "33.7.1"
  }
}

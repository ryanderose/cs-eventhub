{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "alias": ["api.events-hub.dev", "beta-api.events-hub.dev", "preview-api.events-hub.dev"],
  "functions": {
    "api/v1/compose.ts": { "runtime": "edge", "maxDuration": 15 },
    "api/v1/fragment.ts": { "runtime": "edge" },
    "api/v1/plan/[id].ts": { "runtime": "nodejs20.x" },
    "api/v1/interpret.ts": { "runtime": "nodejs20.x" }
  },
  "routes": [
    {
      "src": "/v1/compose",
      "dest": "api/v1/compose.ts",
      "headers": { "Cache-Control": "s-maxage=300, stale-while-revalidate=60" }
    },
    {
      "src": "/v1/fragment/(?<tenantId>[^/]+)",
      "dest": "api/v1/fragment.ts?tenantId=$tenantId",
      "headers": { "Cache-Control": "s-maxage=600, stale-while-revalidate=120" }
    },
    {
      "src": "/v1/plan/(?<id>[^/]+)",
      "dest": "api/v1/plan/[id].ts?id=$id",
      "headers": { "Cache-Control": "no-store" }
    },
    {
      "src": "/v1/interpret",
      "dest": "api/v1/interpret.ts",
      "headers": { "Cache-Control": "no-store" }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "preview-api.events-hub.dev" }],
      "headers": [{ "key": "x-environment", "value": "preview" }]
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "beta-api.events-hub.dev" }],
      "headers": [{ "key": "x-environment", "value": "beta" }]
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "api.events-hub.dev" }],
      "headers": [{ "key": "x-environment", "value": "production" }]
    }
  ]
}

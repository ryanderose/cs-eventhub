{
  "name": "events-hub",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "build": "./scripts/turbo-run.sh run build",
    "test": "./scripts/turbo-run.sh run test",
    "lint": "./scripts/turbo-run.sh run lint",
    "dev": "./scripts/turbo-run.sh run dev --parallel",
    "dev:cdn": "tsx scripts/serve-embed.ts",
    "dev:stack": "concurrently --kill-others --names demo,admin,api,embed,cdn --prefix-colors magenta,blue,cyan,green,yellow \"PORT=3000 HOST=0.0.0.0 pnpm --filter @events-hub/demo-host dev\" \"PORT=3001 HOST=0.0.0.0 pnpm --filter @events-hub/admin dev\" \"PORT=4000 HOST=0.0.0.0 pnpm --filter @events-hub/api dev\" \"pnpm --filter @events-hub/embed-sdk dev\" \"pnpm dev:cdn\"",
    "dev:lane:local": "pnpm dev:stack",
    "publish:embed": "tsx scripts/publish-embed.ts",
    "check:a11y": "./scripts/turbo-run.sh run check:a11y",
    "check:bundles": "./scripts/turbo-run.sh run check:bundles",
    "security:sbom": "./scripts/turbo-run.sh run security:sbom",
    "security:provenance": "./scripts/turbo-run.sh run security:provenance",
    "test:e2e:local": "pnpm playwright test --project=demo-hosts-local --project=admin-local --project=api-local",
    "test:e2e:preview": "pnpm playwright test --project=demo-hosts-preview --project=admin-preview --project=api-preview --grep @preview",
    "test:parity": "pnpm playwright test --project=demo-hosts-preview --grep @parity",
    "ci": "pnpm -w build && pnpm -w test && pnpm -w lint && pnpm -w check:bundles"
  },
  "devDependencies": {
    "@ladle/react": "3.1.0",
    "@playwright/test": "1.45.1",
    "@prisma/language-server": "^6.18.0",
    "@tailwindcss/language-server": "^0.14.29",
    "@testing-library/jest-dom": "6.4.1",
    "@testing-library/react": "14.2.1",
    "@types/node": "20.11.30",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint_d": "^14.3.0",
    "jsdom": "22.1.0",
    "msw": "2.2.13",
    "prettier": "3.2.5",
    "tsx": "4.7.1",
    "turbo": "1.13.3",
    "typescript": "5.4.5",
    "typescript-eslint": "7.8.0",
    "typescript-language-server": "^5.1.0",
    "vitest": "1.5.2",
    "vscode-langservers-extracted": "^4.10.0",
    "yaml-language-server": "^1.19.2"
  }
}

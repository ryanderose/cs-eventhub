{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/__tests__/**", "dist", "node_modules"]
}
